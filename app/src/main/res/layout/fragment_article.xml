<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.managerlee.assessment.viewModel.ArticleViewModel" />

        <variable
            name="article"
            type="ArticleViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/ct_title_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height50"
            android:background="@drawable/title_bg"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            app:tl_iconVisible="false"
            app:tl_indicator_color="@color/red"
            app:tl_textSelectColor="@color/red"
            app:tl_textUnselectColor="@color/colorTitleText"
            app:tl_underline_color="@android:color/white"
            app:tl_underline_height="2dp"
            app:tl_textBold="BOTH"
            app:tl_textsize="@dimen/textSize18"
            app:tl_indicator_width="@dimen/width80"></com.flyco.tablayout.CommonTabLayout>

        <FrameLayout
            android:id="@+id/fl_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </LinearLayout>
</layout>