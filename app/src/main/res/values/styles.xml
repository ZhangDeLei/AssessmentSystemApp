<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ProgressStyle" parent="android:Widget.ProgressBar.Large.Inverse">
        <item name="android:maxWidth">50dip</item>
        <item name="android:maxHeight">50dip</item>
        <item name="android:indeterminateDrawable">@drawable/progress_drawable</item>
        <item name="android:minWidth">50dip</item>
        <item name="android:minHeight">50dip</item>
    </style>
</resources>
